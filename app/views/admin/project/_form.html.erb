<div class="row">
  <div class="col m6 offset-m3 center">
    
    <h5>New Project</h5>

    <%= form_with model: @admin_project, local: true  do |form| %>
  
      <div class="input-field">
           Name: <br>
            <%= form.text_field :name %><br><br>
      </div>
      <div class="input-field">
           Content: <br>
            <%= form.text_area :content %><br>
      </div>
      <div class="input-field">
           Price: <br>
            <%= form.number_field :price %><br>
      </div>
      <div class="input-field">
           Image: <br>
            <%= form.file_field :image %><br>
      </div>

      <button class="btn waves-effect waves-light" type="submit" name="action">Add Project</button>
      <% end %>
    
   
   </div>
</div>
